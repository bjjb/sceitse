// General styles
body
  background-color cornsilk
  margin 0
#sceitse
  position relative
  display block
  height 100%
  color #555
  font-family sans-serif
  canvas
    background-color rgba(255, 255, 255, 0.4)
    display block
    margin auto
    background-color white
    box-shadow 0px 2px 10px 1px rgba(0, 0, 0, 0.4)
    cursor crosshair
  #tools
    position absolute
    top 0
    left 0
    width 15px
    height 100%
    background-color pink

